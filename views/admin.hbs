<div class="container">
    <h1>STS Printer Status Report</h1>
    {{#if groups}}
    {{#each groups}}
    <form action="/groups/{{_id}}" method="post">
        <input type="hidden" name="_method" value="delete">
        <div class="d-flex justify-content-left">
            <button type="submit" class="btn btn-danger" style="margin-right: 10px"><i
                    class="bi bi-trash-fill"></i></button>
            <h3>{{groupName}}</h3>
        </div>

    </form>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Location</th>
                <th scope="col">URL</th>
                <th scope="col">Model</th>
                <th scope="col">Contact</th>
                <th scope="col">Email Switch</th>
            </tr>
            {{#each Printer}}
            <tr>
                <th scope="col">{{Location}}</th>
                <th scope="col">{{url}}</th>
                <th scope="col">{{model}}</th>
                <th scope="col">{{contact}}</th>
                <th scope="col">{{email}}</th>
            </tr>
            {{/each}}
        </thead>
    </table>
    {{/each}}
    {{else}}
    <h1>You haven't created any groups!</h1>
    {{/if}}

    <h3></h3>
    <form action="/groups/add" method="POST">
        <div class="form-group">
            <label for="groupName">Group Name</label>
            <input type="text" class="form-control" id="groupName" name="groupName">
            <small id="groupName" class="form-text text-muted"></small>
        </div>
        <input type="submit" value="Post" class="btn btn-primary">
    </form>
</div>